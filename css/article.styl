@require 'lib'

article
  max-width: 60em
  margin-left-right: auto
  .footnotes
    font-size: 0.875em
  blockquote
    position: relative
    min-height: 3ex
    &:before
      font-size: 64pt
      font-family: 'Lucida Console', Monaco, monospace
      color: #C5C5C5
      position: absolute
      content: "â€œ"
      left: 0
      top: 0
    > *
      margin-left-right: 48pt
  a[href="#TOC"]
    color: #434343
  dl
    border: 3px double #CCC
    padding: 0.667em 0.667em 0 0.667em
    margin: 1.3em
    dt
      float: left
      clear: left
      line-height: 1.3em
      width: 3em
      text-align: right
      font-weight: bold
      &:after
        content: ":"
    dd
      line-height: 1.3em
      margin-left: 4.3em
      margin-bottom: 0.667em
  ul
    list-style-type: disc
    margin-left: 1em
  ol
    list-style-type: decimal
    margin-left: 1.5em
  code
    font-family: Courier New, monospace
    font-weight: bold

.contents
  float: right
  width: auto
  max-width: 20em
  margin-left: 1em
  margin-bottom: 1em
  background-color: #E5F5F5
  padding: 0.667em
  h3
    text-align: center
    margin-bottom: 0.667em
    font-size: 1em
  ul
    margin-top-bottom 0
    li
      margin-top-bottom 0.333em

article + #comments
  max-width: 60em
