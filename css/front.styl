@require 'lib'

#intro
  width: 60%
  margin-left-right: auto
  margin-bottom: 2em
  overflow: hidden

body #body
  margin: 0
  .top
    margin-top: 2em
  .top, .bottom .three-column
    width: 66em
    margin-left-right: auto
  .top > *
    font-size: 1.125em
  .bottom
    margin-bottom: 0
    padding-bottom: 3.9em
    background-color: bar-and-box-background
    .three-column
      > .column
        width: 27%
        margin-left-right: 3%
        h2
          margin-top: 0.667em

#body h2
  font-size: 1.33em
  strong
    font-size: 150%
    vertical-align: baseline
    margin-right: 0.5em
    color: #4FC7D2
    text-shadow: #2D2D2D 1px 1px 1px

#try-now
  font-size: 1.125em
  line-height: 1.2
  text-align: center
  a
    display: inline-block
    border: 2px solid #2D2D2D

#foot
  #handy-links
    > .column
      margin-left-right: 3%
    > .column:first-child
      width: 54%
    > .column:nth-child(2)
      width: 34%
