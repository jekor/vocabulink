@require 'lib'

#book
  position: relative
  width: 66em
  margin-left-right: auto
  margin-top: 2em

.page
  box-sizing: border-box
  float: left
  width: 50%
  height: 80ex
  max-height: 80%
  padding: 3em
  margin: 0 0 30px 0
  border: #C9C9C9 solid 1px
  overflow: auto
  > *:last-child
    margin-bottom: 3em
  h1
    margin-top: 0
  &.left
    border-right: #A9A9A9 solid 1px
    background: linear-gradient(left, #DEDEDE, #FFFFFF 15%, #FFFFFF 86%, #DEDEDE 96%, #C9C9C9)
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.27), 0 0 40px rgba(0, 0, 0, 0.06) inset
    &:before
      content: ''
      z-index: -1
      position: absolute
      left: 20px
      bottom: 45px
      width: 70%
      max-width: 300px
      max-height: 100px
      height: 55%
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3)
      transform: skew(-15deg) rotate(-6deg)
    .footnotes
      ol
        list-style-type: decimal
        margin-left: 1.75em
        font-size: 0.875em        
  &.right
    .sprite-icon-wizard
      float: left
      margin-right: 1em
      margin-bottom: 1em
    > *:first-child
      margin-top: 0
    overflow: auto
    border-left: #A9A9A9 solid 1px
    background: linear-gradient(right, #DEDEDE, #FFFFFF 15%, #FFFFFF 86%, #DEDEDE 96%, #C9C9C9)
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.27), 0 0 40px rgba(0, 0, 0, 0.06) inset
    h2
      font-size: 18pt
      margin-bottom: 0.66em
      text-align: center
    &:after
      content: ''
      z-index: -1
      position: absolute
      right: 20px
      bottom: 45px
      width: 70%
      max-width: 300px
      max-height: 100px
      height: 55%
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3)
      transform: skew(15deg) rotate(6deg)

.signature
  overflow: hidden
  img.avatar, .details
    float: right
  img.avatar
    margin-left: 6px
  .details
    line-height: 1.1em
    text-align: right

.header
  margin: -2em -2em 2em -2em
  font-family: serif
  text-align: center
  span
    font-family: serif
  .title
    font-variant: small-caps
  .page-number
    display: block
    float: left

a.pager
  display: block
  position: absolute
  top: 45%
  &.prev
    left: -50px
  &.next
    right: -50px

a.retained
  color: #434343

#pronounce, button.pronounce
  margin-left: 10px
  padding-left-right: 3px

.sprite-icon-audio
  vertical-align: middle
